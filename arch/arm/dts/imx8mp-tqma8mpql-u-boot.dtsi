#include "imx8mp-u-boot.dtsi"

/ {
	aliases {
		i2c_eeprom0 = &at24c02;
	};

	wdt-reboot {
		compatible = "wdt-reboot";
		wdt = <&wdog1>;
		u-boot,dm-spl;
	};

	firmware {
		optee {
			compatible = "linaro,optee-tz";
			method = "smc";
		};
	};
};

&at24c02 {
	u-boot,dm-spl;
};

&crypto {
	u-boot,dm-spl;
};

/* USB */
&aips4 {
	u-boot,dm-spl;
};

&flash0 {
	spi-tx-bus-width = <1>;
	spi-rx-bus-width = <1>;
};

&flexspi {
	assigned-clock-rates = <100000000>;
	assigned-clocks = <&clk IMX8MP_CLK_QSPI_ROOT>;
	assigned-clock-parents = <&clk IMX8MP_SYS_PLL1_100M>;
};

&gpio1 {
	u-boot,dm-spl;
	u-boot,dm-pre-reloc;
};

&gpio5 {
	u-boot,dm-spl;
	u-boot,dm-pre-reloc;
};

&i2c1 {
	u-boot,dm-spl;
	u-boot,dm-pre-reloc;
};

&iomuxc {
	u-boot,dm-spl;
	u-boot,dm-pre-reloc;
	u-boot,dm-pre-proper;
};

&pinctrl_i2c1 {
	u-boot,dm-spl;
	u-boot,dm-pre-reloc;
};

&pinctrl_i2c1_gpio {
	u-boot,dm-spl;
	u-boot,dm-pre-reloc;
};

&pinctrl_usdhc3 {
	u-boot,dm-spl;
};

&pinctrl_usdhc3_100mhz {
	u-boot,dm-spl;
};

&pinctrl_usdhc3_200mhz {
	u-boot,dm-spl;
};

&pinctrl_pmic {
	u-boot,dm-spl;
};

&pmic {
	u-boot,dm-spl;

	regulators {
		u-boot,dm-spl;
	};
};

&sec_jr0 {
	u-boot,dm-spl;
};

&sec_jr1 {
	u-boot,dm-spl;
};

&sec_jr2 {
	u-boot,dm-spl;
};

&usdhc3 {
	u-boot,dm-spl;
	mmc-hs400-1_8v;
	mmc-hs400-enhanced-strobe;
	assigned-clocks = <&clk IMX8MP_CLK_USDHC3>;
	assigned-clock-rates = <400000000>;
	assigned-clock-parents = <&clk IMX8MP_SYS_PLL1_400M>;
};

&wdog1 {
	u-boot,dm-spl;
};

